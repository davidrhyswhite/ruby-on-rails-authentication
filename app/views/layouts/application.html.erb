<!DOCTYPE html>
<html>
  <head>
    <title>GemlessAuthentication</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
      <% if signed_in? %>
      <%= link_to t("global.sign_out"), sign_out_path, data: { "turbo-method": :delete } %>
      <% else %>
      <%= link_to t("global.sign_in"), sign_in_path %>
      <% end %>
    <%= yield %>
  </body>
</html>
